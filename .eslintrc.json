{
  "plugins": [
    "jest",
    "prettier",
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:jest/recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "jest": true,
    "jest/globals": true
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": [
      "src/tsconfig.json",
      "tests/tsconfig.json"
    ],
    "sourceType": "module"
  },
  "rules": {
    // respect the prettier style guide
    "prettier/prettier": "warn",
    "spaced-comment": [
      "warn",
      "always",
      {
        "block": {
          // whitespace for block comments must be the same at the beginning and at the end
          "balanced": true,
          /*--------------
          should be allowed
          ----------------*/
          "exceptions": [
            "-"
          ]
        },
        "line": {
          //-------------- should be allowed
          "exceptions": [
            "-"
          ]
        }
      }
    ],
    "node/no-unpublished-require": "off",
    "no-unused-vars": "warn",
    "@typescript-eslint/ban-ts-comment": "warn"
  }
}